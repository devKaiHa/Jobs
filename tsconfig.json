{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
